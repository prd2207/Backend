@using WelspunVessel.DTO
@using WelspunVessel.DTO.Masters
@model CompanyMasterDTO

@if (Model != null && Model.CompanyId > 0)
{
    ViewBag.Title = "Add Company Master";

}
else
{
    ViewBag.Title = "Add Company Master";
}

<section class="content-header">
    <div class="col-lg-12 col-sm-12 col-md-12">
        @if (Model != null && Model.CompanyId > 0)
        {
        <h2 class="main-title">Edit Company Master</h2>

        }
        else
        {
      <h2 class="main-title">Add Company Master</h2>
        }

        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "CompanyMaster")"> Company Master</a></li>
            @if (Model != null && Model.CompanyId > 0)
            {
              <li class="active">Edit Company Master</li>

            }
            else
            {
              <li class="active">Add Company Master</li>
            }
        </ol>
    </div>
    @Html.Partial("_TempMessage")
</section>
<section class="content">
    <form asp-action="AddEditCompany" method="post" enctype="multipart/form-data" class="">
        <div class="col-lg-12">
            <div class="col-lg-12 col-md-12 col-sm-12 table-layer">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-horizontal">
                                <fieldset class="col-md-12 fieldsetGroup">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label asp-for="CompanyName" class="control-label"></label><span class="control-label requiredStar">*</span>
                                            <input asp-for="CompanyName" class="form-control" tabindex="1" type="text" maxlength="250"/>
                                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="CompanySpokesperson" class="control-label"></label><span class="control-label requiredStar">*</span>
                                            <input asp-for="CompanySpokesperson" class="form-control" type="text" tabindex="2" maxlength="250"/>
                                            <span asp-validation-for="CompanySpokesperson" class="text-danger"></span>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label asp-for="CompanyCode" class="control-label"></label><span class="control-label requiredStar">*</span>
                                            <input asp-for="CompanyCode" class="form-control" type="text" tabindex="3" maxlength="50"/>
                                            <span asp-validation-for="CompanyCode" class="text-danger"></span>
                                        </div>


                                        <div class="col-md-6">
                                            <label asp-for="IsActive" class="control-label"></label><span class="control-label"></span>
                                            <br />
                                            <select asp-for="IsActive" class="form-control" tabindex="16">
                                                <option value='true'>Active</option>
                                                <option value='false'>InActive</option>
                                            </select>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="">
                    <input asp-for="CompanyId" type="hidden" />
                    <input type="submit" style='margin-right:15px' value="Submit" class="btn btn-default custom-btn" tabindex="5" />
                    <a href="@Url.Action("Index")" class="btn btn-default custom-btn" tabindex="6">Back</a>
                </div>
            </div>
        </div>
    </form>
</section>