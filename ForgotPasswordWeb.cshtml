@model WelspunVessel.DTO.UserForgotPasswordDTO
@{
    Layout = "";
    ViewBag.Title = "Forgot Password";
}
<!DOCTYPE html>

<html>
<head>
    <META HTTP-EQUIV="Pragma" CONTENT="no-cache" />
    <META HTTP-EQUIV="Expires" CONTENT="-1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>
        Globally recognized leaders in Home Textiles and Line Pipes
    </title>
    <meta name="description" content="Welspun provides Home & Advanced Textiles, Flooring, DI & Line Pipes, Pig Iron, TMT bars, Stainless Steel, Alloy, Infrastructure & Warehousing">
    <link href="~/images/favicon2.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/css/skins/skin-blue.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/tagsinput.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/app.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/tagsinput.js"></script>
    <script src="~/lib/respond.js"></script>
    <script src="~/lib/ax/ax.commonFunctions.js"></script>
    <script src="~/lib/md5.js"></script>

</head>
<body id="wrapper">
    <header>
        <!-- header logo Start -->
        <div class="topLogoblock">
            <div class="paddlr20px">
                <div class="row">
                    <div class="col-sm-12 col-md-12 text-center">
                        @*<a href="#" class="logoImg"><img src="~/Areas/Front/Images/logo.png" title="The Twig - Work in synergy" alt="The Twig - Work in synergy" width="200" height="111"></a>*@
                    </div>
                </div>
            </div>
        </div>
        <!-- header logo End -->
    </header>
    <section id="content" class="middleContent innerPage" style="min-height: 420px;">

        <div class="row whiteBg">
            <div class="login-form">
                <div class="text-center">
                    <h1>
                        <a href="/" style="">
                            <img src="~/images/wellogo.png" class="user-image" alt="Profile Image" align="middle" style="width: 100%; height: 100%; " />
                        </a>
                    </h1>
                </div>
                <form method="post" asp-controller="ForgotPassword" asp-action="ForgotPasswordWeb" id="frmForgotPassword">
                    <h4 class="text-center">Forgot Password</h4>
                    <br />
                    <input id="ReturnURL" name="ReturnURL" type="hidden" value=""><input id="Success" name="Success" type="hidden" value="">
                    <div class="form-group">
                        <input asp-for="UserNameEmailID" class="form-control" placeholder="Username / Email ID" />
                        <span asp-validation-for="UserNameEmailID" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group text-center">
                        <input type="submit" value="Submit" class="btn btn-default custom-btn " />
                        <a href="@Url.Action("Login","Login")" class="btn btn-default custom-btn">Back</a>
                    </div>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="row col-lg-12" style="margin: 0px 0px 0px 0px; padding:0px;">
                            <div class="alert alert-danger text-center">@Html.ValidationMessage("authMessage")</div>
                        </div>
                    }
                </form>
            </div>
        </div>
    </section>
    <!-- middle section end  -->
    <div class="footerCopyright cf" style="margin-top:0; color:#6c6c6c;">
        <div class="paddlr20px">
            <div class="row">
                <!-- Copyright text -->
                <div class="text-center col-md-12"> © Jarvis Technolabs 2022. All Rights Reserved </div>

            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            if ($('#Success').val() != "") {
                CommonJS.showAlert("Password Reset", $('#Success').val(), function (result) {
                });
            }
        });
    </script>
</body>
</html>